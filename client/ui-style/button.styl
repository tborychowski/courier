@import "lib"

button
	font inherit
	display inline-block
	padding 2 15 0
	min-width 32px
	min-height 32px
	margin-bottom 0
	font 15/1.4
	font-weight 400
	height auto;
	text-align center
	white-space nowrap
	vertical-align middle
	text-decoration none
	cursor default
	border transparent
	border-radius 3
	user-select none
	overflow hidden
	text-overflow ellipsis
	box-shadow 0 1px 0 rgba(#000, .8)
	color dark-color-text3
	transition background-color .3s ease-out, border-color .3s ease-out, box-shadow .3s ease-out
	background color-info
	vertical-align middle

	&:focus
		border-color dark-color-accent
		box-shadow 0 0 2px 1px dark-color-accent
		outline none

	&:active
		outline none
		box-shadow none
		transform translateY(1px)
		background darken(color-info, 15%)
		color alpha(dark-color-text3, 50%)



	&.success
		background darken(color-success, 30%)

		&:active
			background darken(color-success, 15%)


	&.warning
		background color-warning

		&:active
			background darken(color-warning, 15%)


	&.danger
		background color-danger

		&:active
			background darken(color-danger, 15%)


	&.text-icon
		font-size 20px
		padding 0


	&.icon
		height 32px
		width 32px
		border dark-color-bg2
		background none
		text-align center
		cursor pointer
		z-index 10
		color dark-color-text0
		transition color .2s

		&:focus
			border-color dark-color-accent
			box-shadow 0 0 2px 1px dark-color-accent
			color dark-color-text2

		&:hover
			color dark-color-text2
		&:active
			background dark-color-bg2


.flex-spacer
	flex 1
